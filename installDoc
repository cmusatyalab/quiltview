[Install libraries]
apt-get:
git
python-pip

sudo pip install virtualenv
virtualenv --system-site-packages ENV
source ENV/bin/activate

apt-get: everything from library_log
sudo apt-get upgrade gcc
pip install -r PIP_LIB (??weird scipy install error, even after deleting scipy from PIP_LOG)


[Set up database]
mysql -u root

Add user:
CREATE USER 'quiltview'@'localhost' IDENTIFIED BY 'quiltview2013';
 
Create database:
CREATE DATABASE quiltview;
 
Grant privilege:
GRANT ALL ON *.* TO quiltview@localhost;
FLUSH PRIVILEGES;

Test database:
mysql -u quiltview -p
show databases;

./manage.py syncdb
yes
quiltview
quiltview2013

